div.page-wrapper#search-page
  nav(ng-include="'components/navbar/navbar.html'")
  div.clearfix
    div.container.col-lg-4.col-md-6.col-sm-10.col-lg-offset-4.col-md-offset-3.col-sm-offset-1
      div.loading-screen.center-block(ng-show="!revels")
        i.fa.fa-circle-o-notch.fa-spin
        p Loading Revels...
      div.error.center-block(ng-show="loadError") Error Loading Revels
      div.error.center-block(ng-show="(revels.length < 1)") Oops!  Your search didn't turn up any results.  Please try a different search.
    ul.col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1.col-sm-12#revels
      li.revel.clearfix.list-group-item(ng-repeat="revel in revels")
        img.pull-right(ng-src="{{revel.image_url}}")
        a.title(ng-href="{{revel.url}}"){{revel.name}}
        p.basic-info {{revel.location.display_address[0]}}
        div.rating.pull-left {{revel.rating}} 
        p.review-count {{revel.review_count}} reviews
        p.snippet {{revel.snippet_text}}
        div.checkin
          p
            i.fa.fa-bolt
            span &nbsp; &nbsp; {{revel.revelData.revelers.length}} revelers
          button(ng-click="checkIn(revel.revelData)" ng-class="{'checked-in': revel.revelData.userCheckedIn }" ng-show="isLoggedIn")
            span(ng-if="!revel.revelData.userCheckedIn") Check In
            span(ng-if="revel.revelData.userCheckedIn")
              i.fa.fa-check
              | &nbsp; Checked In
footer(ng-include="'components/footer/footer.html'")




